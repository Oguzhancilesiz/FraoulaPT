@using FraoulaPT.Core.Enums
@using FraoulaPT.DTOs.ExtraPackageOptionDTOs
@model ExtraPackageOptionUpdateDTO
@{
    ViewData["Title"] = "Ek Paket Seçeneğini Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-pencil-square me-1"></i> Ek Paket Seçeneğini Düzenle</h2>

    <form asp-action="Edit" method="post" class="row g-3">
        <input type="hidden" asp-for="Id" />

        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Ad</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Type" class="form-label">Tür</label>
            <select asp-for="Type" asp-items="Html.GetEnumSelectList<ExtraUsageType>()" class="form-select">
                <option value="">Seçiniz</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Amount" class="form-label">Adet</label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Price" class="form-label">Fiyat (₺)</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="IsActive" class="form-label">Aktif mi?</label>
            <select asp-for="IsActive" class="form-select">
                <option value="true">Evet</option>
                <option value="false">Hayır</option>
            </select>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>

        <div class="col-12 d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save2"></i> Güncelle
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
