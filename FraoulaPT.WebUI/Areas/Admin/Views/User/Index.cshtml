@using FraoulaPT.WebUI.Areas.Admin.Models.ViewModels.AccountViewModels

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<AdminUserListVM>
<table class="table">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>İsim</th>
            <th>Email</th>
            <th>Roller</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Roles</td>
                <td>@(user.IsActive ? "Aktif" : "Pasif")</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@user.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="RoleAssign" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Rol Ata</a>
                    <form asp-action="ChangeStatus" asp-route-id="@user.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">@((user.IsActive) ? "Pasif Yap" : "Aktif Yap")</button>
                    </form>
                    <a class="btn btn-sm btn-outline-primary" asp-area="Admin" asp-controller="Students" asp-action="Report" asp-route-userId="@user.Id">Rapor</a>
                </td>
            </tr>
        }
    </tbody>
</table>
