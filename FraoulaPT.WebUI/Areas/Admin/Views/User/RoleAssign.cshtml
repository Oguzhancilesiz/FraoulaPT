@using FraoulaPT.WebUI.Areas.Admin.Models.ViewModels.AccountViewModels
@{
    ViewData["Title"] = "Rol Ata";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model AdminUserRoleAssignVM

@{
}

<div class="container mt-4">
    <div class="card shadow-lg mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h4 class="mb-4">Kullanıcıya Rol Ata</h4>
            <form asp-action="RoleAssign" method="post">
                <input type="hidden" asp-for="UserId" />

                <div class="mb-3">
                    <label class="form-label">Kullanıcı</label>
                    <input type="text" class="form-control" value="@Model.UserName" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label">Roller</label>
                    <select asp-for="AssignedRoles"
                            asp-items="@(new MultiSelectList(Model.AllRoles))"
                            multiple
                            class="form-select"
                            size="6">
                    </select>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>
