@using FraoulaPT.Core.Enums
@using FraoulaPT.DTOs.PackageDTOs
@model PackageCreateDTO
@{
    ViewData["Title"] = "Yeni Paket Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">📦 Yeni Paket Oluştur</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Paket Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PackageType" class="form-label">Paket Tipi</label>
            <select asp-for="PackageType" class="form-select" asp-items="Html.GetEnumSelectList<PackageType>()">
                <option selected disabled>Seçiniz</option>
            </select>
            <span asp-validation-for="PackageType" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="SubscriptionPeriod" class="form-label">Süre</label>
            <select asp-for="SubscriptionPeriod" class="form-select" asp-items="Html.GetEnumSelectList<SubscriptionPeriod>()">
                <option selected disabled>Seçiniz</option>
            </select>
            <span asp-validation-for="SubscriptionPeriod" class="text-danger small"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="MaxQuestionsPerPeriod" class="form-label">Soru Hakkı</label>
            <input asp-for="MaxQuestionsPerPeriod" class="form-control" type="number" min="0" />
        </div>

        <div class="col-md-3">
            <label asp-for="MaxMessagesPerPeriod" class="form-label">Mesaj Hakkı</label>
            <input asp-for="MaxMessagesPerPeriod" class="form-control" type="number" min="0" />
        </div>

        <div class="col-md-3">
            <label asp-for="Price" class="form-label">Fiyat (₺)</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
        </div>

        <div class="col-md-3">
            <label asp-for="Order" class="form-label">Sıra</label>
            <input asp-for="Order" class="form-control" type="number" min="0" />
        </div>

        <div class="col-md-6">
            <label asp-for="HighlightColor" class="form-label">Vitrin Rengi (Opsiyonel)</label>
            <input asp-for="HighlightColor" class="form-control" placeholder="#FFAA00" />
        </div>

        <div class="col-md-6">
            <label asp-for="ImageFile" class="form-label">Paket Görseli</label>
            <input asp-for="ImageFile" type="file" accept="image/*" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger small"></span>
        </div>


        <div class="col-md-12">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="col-md-12">
            <label asp-for="Features" class="form-label">Özellikler (JSON veya metin)</label>
            <textarea asp-for="Features" class="form-control" rows="2"></textarea>
        </div>

        <div class="col-md-12 form-check mt-2">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
            <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Kaydet
        </button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
