@using FraoulaPT.DTOs.ExerciseCategoryDTOs

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<ExerciseCategoryListDTO>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold mb-0"><i class="bi bi-collection"></i> Kategoriler</h3>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Kategori
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        Henüz hiç kategori eklenmemiş.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover shadow-sm bg-white rounded align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Kategori Adı</th>
                    <th>Hareket Sayısı</th>
                    <th style="width:140px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td class="fw-bold">@Model[i].Name</td>
                        <td>
                            <span class="badge bg-info">@Model[i].ExerciseCount</span>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-warning btn-sm me-1">
                                <i class="bi bi-pencil"></i> Düzenle
                            </a>
                            <form asp-action="Delete" asp-route-id="@Model[i].Id" method="post" class="d-inline" onsubmit="return confirm('Kategori silinsin mi?');">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
