@{
    ViewData["Title"] = "Roller";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<FraoulaPT.DTOs.AppRoleDTOs.AppRoleListDTO>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Roller</h2>
        <a asp-action="Create" asp-controller="Role" asp-area="Admin" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Rol Ekle
        </a>
    </div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Rol Adı</th>
@*                 <th>İşlemler</th> *@
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int i = 1;
                foreach (var role in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@role.Name</td>
                      @*   <td>
                            <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil-square"></i> Düzenle
                            </a>
                        </td> *@
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">Kayıtlı rol bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
