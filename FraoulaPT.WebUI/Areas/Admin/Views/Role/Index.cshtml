@using FraoulaPT.WebUI.Areas.Admin.Models.ViewModels._Shared
@model List<FraoulaPT.DTOs.AppRoleDTOs.AppRoleListDTO>

@{
    ViewData["Title"] = "Roller";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var header = new PageHeaderVM
            {
                Title = "Roller",
                Subtitle = "Sistemde tanımlı tüm roller",
                Breadcrumbs = new(){
            new(){ Text="Dashboard", Url = Url.Action("Index","Dashboard", new{ area="Admin" }) },
            new(){ Text="Roller" }
        },
                Buttons = new(){
            new(){ Text="Yeni Rol", Url = Url.Action("Create","AppRole", new{ area="Admin"}), Icon="bi-plus-circle", ColorClass="btn-brand" }
        }
            };
}

@await Html.PartialAsync("AdminPartials/_PageHeader", header)

<div class="container-fluid">
    <div class="card ring shadow-soft">
        <div class="card-body">
            <div class="row g-2 align-items-end mb-3">
                <div class="col-12 col-md-4 ms-auto">
                    <label class="form-label small text-muted">Ara</label>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-transparent border-secondary"><i class="bi bi-search"></i></span>
                        <input id="roleSearch" class="form-control bg-transparent border-secondary text-light" placeholder="Rol adı ile ara…">
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr class="small text-muted">
                            <th style="width:64px">#</th>
                            <th>Rol Adı</th>
                            <th style="width:140px" class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody id="roleTbody">
                        @if (Model != null && Model.Any())
                        {
                            var i = 0;
                            foreach (var r in Model)
                            {
                                <tr>
                                    <td class="text-muted">@(++i)</td>
                                    <td class="fw-semibold">@r.Name</td>
                                    <td class="text-end">
                                        <a asp-area="Admin" asp-controller="AppRole" asp-action="Edit" asp-route-id="@r.Id"
                                           class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil"></i> Düzenle
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="3" class="text-center text-muted py-4">Kayıtlı rol bulunamadı.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // basit client-side filtre
        (function(){
          const input = document.getElementById('roleSearch');
          const rows  = () => Array.from(document.querySelectorAll('#roleTbody tr'));
          input?.addEventListener('input', function(){
            const q = this.value.toLowerCase();
            rows().forEach(tr => {
              const txt = (tr.children[1]?.textContent || '').toLowerCase();
              tr.style.display = txt.includes(q) ? '' : 'none';
            });
          });
        })();
    </script>
}
