@using FraoulaPT.DTOs.PackageDTO
@model List<PackageListDTO>

@{
    ViewBag.Title = "Paketler";
}

<h2>Paketler</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name" />
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <ul class="list-unstyled mb-2">
                        <li><b>Fiyat:</b> @item.Price.ToString("N2") ₺</li>
                        <li><b>Dönem:</b> @item.SubscriptionPeriod</li>
                        <li><b>Soru Hakkı:</b> @item.MaxQuestionsPerPeriod</li>
                        <li><b>Mesaj Hakkı:</b> @item.MaxMessagesPerPeriod</li>
                    </ul>
                    <a href="@Url.Action("Buy", "Package", new { id = item.Id })" class="btn btn-primary w-100">Satın Al</a>
                </div>
            </div>
        </div>
    }
</div>
