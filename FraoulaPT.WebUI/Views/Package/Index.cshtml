@using FraoulaPT.WebUI.Areas.Admin.Models.ViewModels
@model PackageIndexVM

@{
    ViewData["Title"] = "Paketler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container py-5">
    <h2 class="text-center mb-4 text-warning fw-bold">📦 Paketler</h2>

    @if (Model == null || !Model.Packages.Any())
    {
        <div class="alert alert-warning text-center shadow-sm">
            Şu anda aktif bir paket bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var package in Model.Packages)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0"
                         style="background-color: rgba(20,20,20,0.95); color: #f1f1f1; border-radius: 12px; overflow: hidden;">

                        @if (!string.IsNullOrWhiteSpace(package.ImageUrl))
                        {
                            <img src="@package.ImageUrl" class="card-img-top"
                                 alt="@package.Name"
                                 style="height: 180px; object-fit: cover;">
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-warning fw-semibold">@package.Name</h5>
                            <h6 class="text-secondary small">
                                @package.PackageType.ToString() | @package.SubscriptionPeriod.ToString()
                            </h6>
                            <p class="card-text small opacity-85 mb-3">@package.Description</p>

                            <ul class="list-group list-group-flush small mb-3" style="border-radius: 8px; overflow: hidden;">
                                <li class="list-group-item bg-transparent text-light border-secondary">
                                    <strong>@package.MaxQuestionsPerPeriod</strong> soru hakkı
                                </li>
                                <li class="list-group-item bg-transparent text-light border-secondary">
                                    <strong>@package.MaxMessagesPerPeriod</strong> mesaj hakkı
                                </li>
                            </ul>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="badge bg-warning text-dark fs-6 px-3 py-2">
                                        @($"{package.Price:C2}")
                                    </span>
                                </div>

                                @if (Model.HasActivePackage)
                                {
                                    <div class="alert alert-warning small text-dark mb-0">
                                        Aktif bir paketiniz bulunmaktadır.
                                        <a href="/ExtraPackage" class="fw-bold">Ek paket satın alabilirsiniz.</a>
                                    </div>
                                }
                                else
                                {
                                    <form method="post" asp-action="Purchase" asp-controller="Package" class="d-grid">
                                        <input type="hidden" name="packageId" value="@package.Id" />
                                        <button type="submit" class="btn btn-warning fw-semibold shadow-sm">
                                            <i class="bi bi-cart-plus"></i> Satın Al
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>
