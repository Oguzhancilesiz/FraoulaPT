@{
    ViewData["Title"] = "Tüm Paketlerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<FraoulaPT.DTOs.UserPackageDTOs.UserPackageDetailDTO>

<div class="container py-5">
    <h2 class="text-center mb-4 text-warning fw-bold">📦 Paketlerim</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            Henüz bir paket satın almadınız.
        </div>
    }
    else
    {
        var active = Model.FirstOrDefault(p => p.IsActive);
        var old = Model.Where(p => !p.IsActive).ToList();

        @* ✅ Aktif Paket *@
        @if (active != null)
        {
            <div class="card mb-4 shadow-lg border-0"
                 style="background-color: rgba(25,25,25,0.95); color: #f1f1f1; border-radius: 12px;">
                <div class="card-header bg-success text-white fw-semibold">
                    <i class="bi bi-lightning-charge-fill"></i> Aktif Paketiniz: <span class="fw-bold">@active.PackageName</span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6"><strong>Başlangıç:</strong> @active.StartDate.ToShortDateString()</div>
                        <div class="col-md-6"><strong>Bitiş:</strong> @active.EndDate.ToShortDateString()</div>
                    </div>

                    <!-- Mesaj Hakkı -->
                    <div class="mb-3">
                        @{
                            int usedMsg = active.UsedMessages.GetValueOrDefault();
                            int totalMsg = active.TotalMessages.GetValueOrDefault();
                            int percentMsg = totalMsg == 0 ? 0 : usedMsg * 100 / totalMsg;
                        }
                        <div class="d-flex justify-content-between small">
                            <span><strong>Mesaj Hakkı:</strong> @usedMsg / @totalMsg</span>
                            <span>@($"{Math.Min(100, percentMsg)}%")</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-info" role="progressbar"
                                 style="width:@(Math.Min(100, percentMsg))%"></div>
                        </div>
                    </div>

                    <!-- Soru Hakkı -->
                    <div class="mb-3">
                        @{
                            int usedQ = active.UsedQuestions.GetValueOrDefault();
                            int totalQ = active.TotalQuestions.GetValueOrDefault();
                            int percentQ = totalQ == 0 ? 0 : usedQ * 100 / totalQ;
                        }
                        <div class="d-flex justify-content-between small">
                            <span><strong>Soru Hakkı:</strong> @usedQ / @totalQ</span>
                            <span>@($"{Math.Min(100, percentQ)}%")</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-warning" role="progressbar"
                                 style="width:@(Math.Min(100, percentQ))%"></div>
                        </div>
                    </div>

                    <!-- Ek Haklar -->
                    <div class="mt-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="text-warning mb-0"><i class="bi bi-plus-circle"></i> Ek Haklar</h6>
                            <a asp-controller="ExtraPackage" asp-action="Index"
                               class="btn btn-sm btn-outline-warning fw-semibold">
                                📥 Ek Paket Al
                            </a>
                        </div>
                        @if (active.ExtraRights.Any())
                        {
                            <ul class="list-group small">
                                @foreach (var extra in active.ExtraRights)
                                {
                                    <li class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
                                        <span><strong>@extra.RightType:</strong> @extra.Amount adet</span>
                                        <span class="badge bg-light text-dark">
                                            @extra.PurchaseDate.ToShortDateString()
                                            @if (!string.IsNullOrWhiteSpace(extra.Note))
                                            {
                                                <small class="text-muted">- @extra.Note</small>
                                            }
                                        </span>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="alert alert-secondary small">Henüz ek hak alınmamış.</div>
                        }
                    </div>
                </div>
            </div>
        }

        @* 📜 Eski Paketler *@
        @if (old.Any())
        {
            <h5 class="text-warning mb-3">📜 Önceki Paketler</h5>
        }

        @foreach (var package in old)
        {
            <div class="card mb-3 shadow-sm border-0"
                 style="background-color: rgba(30,30,30,0.95); color: #f1f1f1; border-radius: 12px;">
                <div class="card-header bg-secondary text-white">
                    Önceki Paket: <strong>@package.PackageName</strong>
                </div>
                <div class="card-body small">
                    <p><strong>Süre:</strong> @package.StartDate.ToShortDateString() - @package.EndDate.ToShortDateString()</p>

                    <!-- Mesaj Hakkı -->
                    <div class="mb-3">
                        @{
                            int usedMsg = package.UsedMessages.GetValueOrDefault();
                            int totalMsg = package.TotalMessages.GetValueOrDefault();
                            int percentMsg = totalMsg == 0 ? 0 : usedMsg * 100 / totalMsg;
                        }
                        <div class="d-flex justify-content-between">
                            <span><strong>Mesaj Hakkı:</strong> @usedMsg / @totalMsg</span>
                            <span>@($"{Math.Min(100, percentMsg)}%")</span>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-info" role="progressbar"
                                 style="width:@(Math.Min(100, percentMsg))%"></div>
                        </div>
                    </div>

                    <!-- Soru Hakkı -->
                    <div class="mb-3">
                        @{
                            int usedQ = package.UsedQuestions.GetValueOrDefault();
                            int totalQ = package.TotalQuestions.GetValueOrDefault();
                            int percentQ = totalQ == 0 ? 0 : usedQ * 100 / totalQ;
                        }
                        <div class="d-flex justify-content-between">
                            <span><strong>Soru Hakkı:</strong> @usedQ / @totalQ</span>
                            <span>@($"{Math.Min(100, percentQ)}%")</span>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-warning" role="progressbar"
                                 style="width:@(Math.Min(100, percentQ))%"></div>
                        </div>
                    </div>

                    <!-- Ek Haklar -->
                    @if (package.ExtraRights.Any())
                    {
                        <h6 class="mt-3 text-warning"><i class="bi bi-plus-circle"></i> Ek Haklar</h6>
                        <ul class="list-group small">
                            @foreach (var extra in package.ExtraRights)
                            {
                                <li class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
                                    <span><strong>@extra.RightType:</strong> @extra.Amount adet</span>
                                    <span class="badge bg-light text-dark">
                                        @extra.PurchaseDate.ToShortDateString()
                                        @if (!string.IsNullOrWhiteSpace(extra.Note))
                                        {
                                            <small class="text-muted">- @extra.Note</small>
                                        }
                                    </span>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        }
    }
</div>
