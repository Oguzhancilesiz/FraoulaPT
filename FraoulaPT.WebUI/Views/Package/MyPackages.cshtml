@using FraoulaPT.DTOs.UserPackageDTOs
@model List<UserPackageDetailDTO>
@{
    ViewData["Title"] = "Tüm Paketlerim";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Veriyi yerelde tutuyorsan DateTime.Now kullan
    var now = DateTime.UtcNow;

    bool IsActiveNow(UserPackageDetailDTO p) =>
        p != null && p.IsActive && p.StartDate <= now && p.EndDate >= now;

    bool IsUpcoming(UserPackageDetailDTO p) =>
        p != null && p.StartDate > now;

    var list = Model ?? new List<UserPackageDetailDTO>();
    var active = list.OrderByDescending(p => p.EndDate).FirstOrDefault(IsActiveNow);
    var upcoming = list.Where(IsUpcoming).OrderBy(p => p.StartDate).ToList();
    var old = list.Where(p => !IsActiveNow(p) && !IsUpcoming(p))
                       .OrderByDescending(p => p.StartDate).ToList();

    int Pct(int used, int total) => total <= 0 ? 0 : Math.Min(100, (int)Math.Round(100.0 * used / total));
}
<div class="container py-5">
    <h2 class="text-center mb-4 text-warning fw-bold">📦 Paketlerim</h2>

    @if (!list.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            Henüz bir paket satın almadınız.
        </div>
    }
    else
    {
        @* ✅ Aktif Paket *@
        if (active != null)
        {
            var usedMsg = active.UsedMessages.GetValueOrDefault();
            var totalMsg = active.TotalMessages.GetValueOrDefault();
            var usedQ = active.UsedQuestions.GetValueOrDefault();
            var totalQ = active.TotalQuestions.GetValueOrDefault();

            // kalan gün (int)
            var remainDays = (int)Math.Ceiling((active.EndDate.Date - now.Date).TotalDays);
            var isEndingSoon = remainDays <= 3 && remainDays >= 0;

            <div class="card mb-4 shadow-lg border-0" style="background-color: rgba(25,25,25,0.95); color: #f1f1f1; border-radius: 12px;">
                <div class="card-header bg-success text-white fw-semibold d-flex justify-content-between">
                    <span><i class="bi bi-lightning-charge-fill"></i> Aktif Paketiniz: <b>@active.PackageName</b></span>
                    <span class="badge bg-light text-dark">Kalan Gün: @(remainDays < 0 ? 0 : remainDays)</span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6"><strong>Başlangıç:</strong> @active.StartDate.ToShortDateString()</div>
                        <div class="col-md-6"><strong>Bitiş:</strong> @active.EndDate.ToShortDateString()</div>
                    </div>

                    @if (isEndingSoon)
                    {
                        <div class="alert alert-warning py-2">
                            ⏳ Paketiniz yakında bitiyor. <a href="/Package/Index" class="fw-bold">Paket yenileyin</a>.
                        </div>
                    }

                    <!-- Mesaj Hakkı -->
                    <div class="mb-3">
                        <div class="d-flex justify-content-between small">
                            <span><strong>Mesaj Hakkı:</strong> @usedMsg / @totalMsg</span>
                            <span>@($"{Pct(usedMsg, totalMsg)}%")</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-info" style="width:@Pct(usedMsg,totalMsg)%"></div>
                        </div>
                    </div>

                    <!-- Soru Hakkı -->
                    <div class="mb-3">
                        <div class="d-flex justify-content-between small">
                            <span><strong>Soru Hakkı:</strong> @usedQ / @totalQ</span>
                            <span>@($"{Pct(usedQ, totalQ)}%")</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-warning" style="width:@Pct(usedQ,totalQ)%"></div>
                        </div>
                    </div>

                    <!-- Ek Haklar -->
                    <div class="mt-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="text-warning mb-0"><i class="bi bi-plus-circle"></i> Ek Haklar</h6>
                            <a asp-controller="ExtraPackage" asp-action="Index"
                               class="btn btn-sm btn-outline-warning fw-semibold">
                                📥 Ek Paket Al
                            </a>
                        </div>
                        @if (active.ExtraRights?.Any() == true)
                        {
                            <ul class="list-group small">
                                @foreach (var extra in active.ExtraRights)
                                {
                                    <li class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
                                        <span><strong>@extra.RightType:</strong> @extra.Amount adet</span>
                                        <span class="badge bg-light text-dark">
                                            @extra.PurchaseDate.ToShortDateString()
                                            @if (!string.IsNullOrWhiteSpace(extra.Note))
                                            {
                                                <small class="text-muted">- @extra.Note</small>
                                            }
                                        </span>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="alert alert-secondary small">Henüz ek hak alınmamış.</div>
                        }
                    </div>
                </div>
            </div>
        }

        @* ⏳ Bekleyen Paketler *@
        if (upcoming.Any())
        {
            <h5 class="text-warning mb-3"><i class="bi bi-hourglass-split me-1"></i> Başlamayı Bekleyen Paketler</h5>
            <div class="row row-cols-1 row-cols-md-2 g-3 mb-4">
                @foreach (var p in upcoming)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0" style="background-color: rgba(30,30,30,0.95); color: #f1f1f1; border-radius: 12px;">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="fw-semibold">@p.PackageName</div>
                                    <span class="badge bg-secondary">Bekliyor</span>
                                </div>
                                <div class="small text-muted">Süre: @p.StartDate.ToShortDateString() - @p.EndDate.ToShortDateString()</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        @* 📜 Eski Paketler *@
        if (old.Any())
        {
            <h5 class="text-warning mb-3">📜 Önceki Paketler</h5>
            @foreach (var package in old)
            {
                var usedMsg = package.UsedMessages.GetValueOrDefault();
                var totalMsg = package.TotalMessages.GetValueOrDefault();
                var usedQ = package.UsedQuestions.GetValueOrDefault();
                var totalQ = package.TotalQuestions.GetValueOrDefault();

                <div class="card mb-3 shadow-sm border-0" style="background-color: rgba(30,30,30,0.95); color: #f1f1f1; border-radius: 12px;">
                    <div class="card-header bg-secondary text-white">
                        Önceki Paket: <strong>@package.PackageName</strong>
                    </div>
                    <div class="card-body small">
                        <p><strong>Süre:</strong> @package.StartDate.ToShortDateString() - @package.EndDate.ToShortDateString()</p>

                        <!-- Mesaj Hakkı -->
                        <div class="mb-2">
                            <div class="d-flex justify-content-between">
                                <span><strong>Mesaj Hakkı:</strong> @usedMsg / @totalMsg</span>
                                <span>@($"{Pct(usedMsg, totalMsg)}%")</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-info" style="width:@Pct(usedMsg,totalMsg)%"></div>
                            </div>
                        </div>

                        <!-- Soru Hakkı -->
                        <div class="mb-2">
                            <div class="d-flex justify-content-between">
                                <span><strong>Soru Hakkı:</strong> @usedQ / @totalQ</span>
                                <span>@($"{Pct(usedQ, totalQ)}%")</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-warning" style="width:@Pct(usedQ,totalQ)%"></div>
                            </div>
                        </div>

                        @if (package.ExtraRights?.Any() == true)
                        {
                            <h6 class="mt-3 text-warning"><i class="bi bi-plus-circle"></i> Ek Haklar</h6>
                            <ul class="list-group small">
                                @foreach (var extra in package.ExtraRights)
                                {
                                    <li class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
                                        <span><strong>@extra.RightType:</strong> @extra.Amount adet</span>
                                        <span class="badge bg-light text-dark">
                                            @extra.PurchaseDate.ToShortDateString()
                                            @if (!string.IsNullOrWhiteSpace(extra.Note))
                                            {
                                                <small class="text-muted">- @extra.Note</small>
                                            }
                                        </span>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            }
        }
    }
</div>
