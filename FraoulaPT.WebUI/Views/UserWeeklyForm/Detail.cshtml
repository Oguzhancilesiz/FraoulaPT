@model FraoulaPT.DTOs.UserWeeklyFormDTOs.UserWeeklyFormDetailDTO
@{
    ViewData["Title"] = "Form Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var kalanGun = 30 - (DateTime.UtcNow - Model.FormDate).Days;
    kalanGun = kalanGun < 0 ? 0 : kalanGun;

    var statusBadgeClass = Model.Status == FraoulaPT.Core.Enums.Status.Active ? "success" :
                           Model.Status == FraoulaPT.Core.Enums.Status.Pending ? "secondary" :
                           "danger";
}

<div class="container py-4">
    <div class="card shadow-lg border-0 bg-dark text-light rounded-3">
        <div class="card-header bg-warning text-dark fw-bold">
            📅 Form Detayı - @Model.FormDate.ToString("dd.MM.yyyy")
            <span class="badge bg-@statusBadgeClass ms-2">@Model.Status</span>
        </div>

        <div class="card-body">
            @if (kalanGun > 0)
            {
                <div class="alert alert-warning">
                    🕒 Yeni form gönderebilmeniz için <strong>@kalanGun gün</strong> kaldı.
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    ✅ Yeni form gönderebilirsiniz!
                </div>
            }

            <div class="row g-4 mt-2">
                <!-- Ölçümler -->
                <div class="col-md-6">
                    <ul class="list-group list-group-flush bg-dark">
                        <li class="list-group-item bg-dark text-light"><strong>Kilo:</strong> @Model.Weight kg</li>
                        <li class="list-group-item bg-dark text-light"><strong>Yağ Oranı:</strong> @Model.FatPercent %</li>
                        <li class="list-group-item bg-dark text-light"><strong>Kas Kütlesi:</strong> @Model.MuscleMass kg</li>
                        <li class="list-group-item bg-dark text-light"><strong>Bel:</strong> @Model.Waist cm</li>
                        <li class="list-group-item bg-dark text-light"><strong>Kalça:</strong> @Model.Hip cm</li>
                        <li class="list-group-item bg-dark text-light"><strong>Göğüs:</strong> @Model.Chest cm</li>
                        <li class="list-group-item bg-dark text-light"><strong>Kol:</strong> @Model.Arm cm</li>
                        <li class="list-group-item bg-dark text-light"><strong>Bacak:</strong> @Model.Leg cm</li>
                        <li class="list-group-item bg-dark text-light"><strong>Dinlenme Nabzı:</strong> @Model.RestingPulse bpm</li>
                        <li class="list-group-item bg-dark text-light"><strong>Tansiyon:</strong> @Model.BloodPressure</li>
                        <li class="list-group-item bg-dark text-light"><strong>Vo2 Max:</strong> @Model.Vo2Max</li>
                    </ul>
                </div>

                <!-- Notlar -->
                <div class="col-md-6">
                    <div class="card bg-secondary text-light mb-3">
                        <div class="card-header">🧘 Esneklik Notları</div>
                        <div class="card-body">
                            @if (string.IsNullOrWhiteSpace(Model.FlexibilityNotes))
                            {
                                <span class="text-muted">-</span>
                            }
                            else
                            {
                                <p>@Model.FlexibilityNotes</p>
                            }
                        </div>
                    </div>

                    <div class="card bg-secondary text-light mb-3">
                        <div class="card-header">📝 Kullanıcı Notu</div>
                        <div class="card-body">
                            @if (string.IsNullOrWhiteSpace(Model.UserNote))
                            {
                                <span class="text-muted">-</span>
                            }
                            else
                            {
                                <p>@Model.UserNote</p>
                            }
                        </div>
                    </div>

                    <div class="card bg-secondary text-light">
                        <div class="card-header">🎯 Koç Geri Bildirimi</div>
                        <div class="card-body">
                            @if (string.IsNullOrWhiteSpace(Model.CoachFeedback))
                            {
                                <span class="text-muted">-</span>
                            }
                            else
                            {
                                <p>@Model.CoachFeedback</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Fotoğraflar -->
            @if (Model.ProgressPhotoUrls != null && Model.ProgressPhotoUrls.Any())
            {
                <div class="mt-4">
                    <h5 class="text-warning">📸 Gelişim Fotoğrafları</h5>
                    <div class="row g-2">
                        @foreach (var url in Model.ProgressPhotoUrls)
                        {
                            <div class="col-6 col-md-4 col-lg-3">
                                <img src="@url" class="img-fluid rounded shadow-sm border border-secondary" alt="Progress Photo" />
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
