@using FraoulaPT.DTOs.UserWeeklyFormDTO
@model List<UserWeeklyFormDTO>

@{
    ViewData["Title"] = "Aylık/Haftalık Formlarım";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">Formlarım</h3>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Form Ekle
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Henüz hiç form girmediniz. <a asp-action="Create">Şimdi ilk formunuzu ekleyin!</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Durum</th>
                        <th>Tarih</th>
                        <th>Kilo (kg)</th>
                        <th>Yağ %</th>
                        <th>Kas (kg)</th>
                        <th>Beden Ölçüleri</th>
                        <th>Progress Foto</th>
                        <th>Kendi Notun</th>
                        <th>Hoca Yorumu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var form in Model)
                    {
                        <tr>
                            <td>
                                @if (form.Status == FraoulaPT.Core.Enums.Status.Pending)
                                {
                                    <span class="badge bg-warning text-dark">Cevap Bekleniyor...</span>
                                }
                                else if (form.Status == FraoulaPT.Core.Enums.Status.Read)
                                {
                                    <span class="badge bg-danger">Okundu</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">None</span>
                                }
                            </td>

                            <td>@form.FormDate.ToString("dd.MM.yyyy")</td>
                            <td>@(form.Weight ?? 0)</td>
                            <td>@(form.FatPercent ?? 0)</td>
                            <td>@(form.MuscleMass ?? 0)</td>
                            <td>
                                <span title="Bel">Bel: @(form.Waist ?? 0) cm</span><br />
                                <span title="Kalça">Kalça: @(form.Hip ?? 0) cm</span><br />
                                <span title="Göğüs">Göğüs: @(form.Chest ?? 0) cm</span><br />
                                <span title="Kol">Kol: @(form.Arm ?? 0) cm</span><br />
                                <span title="Bacak">Bacak: @(form.Leg ?? 0) cm</span>
                            </td>
                            <td>
                                @if (form.ProgressPhotos != null && form.ProgressPhotos.Any())
                                {
                                    <div class="d-flex flex-row flex-wrap gap-1">
                                        @foreach (var photo in form.ProgressPhotos)
                                        {
                                            <a href="@photo.Url" target="_blank">
                                                <img src="@photo.Url" alt="@photo.AltText" class="img-thumbnail" style="width:48px; height:48px; object-fit:cover;" />
                                            </a>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @Html.Raw(string.IsNullOrWhiteSpace(form.UserNote) ? "<span class='text-muted'>-</span>" : form.UserNote.Replace("\n", "<br/>"))
                            </td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(form.CoachFeedback))
                                {
                                    <span class="text-success fw-semibold">@form.CoachFeedback</span>
                                }
                                else
                                {
                                    <span class="text-warning">Henüz kontrol edilmedi</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
