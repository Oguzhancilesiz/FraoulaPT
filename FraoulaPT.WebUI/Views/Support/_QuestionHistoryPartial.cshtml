@model List<FraoulaPT.DTOs.UserQuestionDTOs.UserQuestionDTO>

@{
    var list = Model ?? new List<FraoulaPT.DTOs.UserQuestionDTOs.UserQuestionDTO>();
    var total = list.Count;

    DateTime getSortDate(FraoulaPT.DTOs.UserQuestionDTOs.UserQuestionDTO q)
        => (q.AnsweredAt ?? q.AskedAt);

    var latest = list
        .OrderByDescending(q => !string.IsNullOrWhiteSpace(q.AnswerText))   // cevaplı önce
        .ThenByDescending(getSortDate)                                      // sonra tarih
        .Take(1)
        .ToList();

    var remaining = Math.Max(0, total - latest.Count);
}

@if (total == 0)
{
    <div class="alert alert-warning text-center shadow-sm border-0">
        <i class="bi bi-info-circle-fill me-1"></i> Daha önce bir soru sormadınız.
    </div>
}
else
{
    <style>
        .q-card {
            background: var(--surface);
            color: var(--text);
            border: 1px solid var(--border);
            border-radius: 12px;
        }

        .clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>

    <div class="list-group">
        @foreach (var q in latest)
        {
            var answered = !string.IsNullOrWhiteSpace(q.AnswerText);
            var when = (q.AnsweredAt ?? q.AskedAt);
            var whenTxt = when.ToLocalTime().ToString("dd.MM.yyyy HH:mm");
            var coach = string.IsNullOrWhiteSpace(q.CoachName) ? "Koç" : q.CoachName;

            <div class="list-group-item q-card shadow-sm mb-2">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <span class="badge @(answered ? "bg-success" : "bg-warning text-dark")">
                        @(answered ? "Yanıtlandı" : "Yanıt Bekliyor")
                    </span>
                    <small class="text-muted">
                        <i class="bi bi-clock-history me-1"></i>@whenTxt
                    </small>
                </div>

                <p class="mb-2">
                    <strong class="text-warning"><i class="bi bi-question-circle me-1"></i>Soru:</strong>
                    <span class="clamp-2">@q.QuestionText</span>
                </p>

                @if (answered)
                {
                    <div class="mb-2">
                        <strong class="text-success"><i class="bi bi-chat-dots-fill me-1"></i>Cevap:</strong>
                        <div class="clamp-2">@q.AnswerText</div>
                    </div>
                    <small class="text-muted d-block mb-2">
                        <i class="bi bi-person-badge me-1"></i>Yanıtlayan: @coach
                    </small>

                    <a href="@Url.Action("QuestionDetail", "Support", new { id = q.QuestionId })"
                       class="btn btn-sm fw-semibold text-white"
                       style="background:var(--brand-grad); border:0;">
                        <i class="bi bi-eye me-1"></i> Görüntüle
                    </a>
                }
                else
                {
                    <small class="text-warning d-inline-flex align-items-center">
                        <i class="bi bi-hourglass-split me-1"></i> Bu soru henüz yanıtlanmadı.
                    </small>
                }
            </div>
        }

        @if (remaining > 0)
        {
            <div class="text-center mt-2">
                <a href="/Support/AllMyQuestions"
                   class="btn btn-sm btn-outline-light border-secondary mt-2">
                    <i class="bi bi-list-ul me-1"></i> +@remaining Tümünü Gör
                </a>
            </div>
        }
    </div>
}
