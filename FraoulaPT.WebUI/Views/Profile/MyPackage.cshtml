@model FraoulaPT.DTOs.UserPackageDTO.UserPackageListDTO

@if (Model != null)
{
    <div class="card mt-3">
        <div class="card-header" style="background:@Model.HighlightColor">
            <b>@Model.PackageName</b> Paketi
        </div>
        <div class="card-body">
            <p><b>Açıklama:</b> @Model.PackageDescription</p>
            <p><b>Başlangıç:</b> @Model.StartDate.ToShortDateString()</p>
            <p><b>Bitiş:</b> @Model.EndDate.ToShortDateString()</p>
            <p><b>Soru Hakkı:</b> @Model.UsedQuestions / @Model.MaxQuestionsPerPeriod</p>
            <p><b>Mesaj Hakkı:</b> @Model.UsedMessages / @Model.MaxMessagesPerPeriod</p>
            <p><b>Ücret:</b> @Model.Price ₺</p>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning mt-3">
        Henüz aktif bir paketiniz bulunmamaktadır.
    </div>
}
