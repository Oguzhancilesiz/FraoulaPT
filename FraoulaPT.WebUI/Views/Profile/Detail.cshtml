@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FraoulaPT.DTOs.UserProfileDTOs.UserProfileDetailDTO

<div class="container py-5">
    <div class="card shadow border-0">
        <div class="card-body">
            <div class="text-center mb-4">
                <img src="@(!string.IsNullOrWhiteSpace(Model.ProfilePhotoUrl) ? Model.ProfilePhotoUrl : "/uploads/user-default.jpg")"
                     alt="Profil Fotoğrafı"
                     class="rounded-circle shadow"
                     width="140" height="140"
                     style="object-fit: cover; background:#f5f5f5; border:5px solid #ff8800;" />
                <h3 class="mt-3 fw-semibold">Ad Soyad Gelecek</h3>

                @if (!string.IsNullOrWhiteSpace(Model.Instagram))
                {
                    <a href="https://instagram.com/@Model.Instagram" target="_blank" class="text-muted d-inline-block mt-1 text-decoration-none">
                        <i class="bi bi-instagram"></i> @Model.Instagram
                    </a>
                }
            </div>

            <hr class="mb-4" />

            <dl class="row">
                <dt class="col-md-4 col-sm-6">Cinsiyet</dt>
                <dd class="col-md-8 col-sm-6">@Model.Gender</dd>

                <dt class="col-md-4 col-sm-6">Doğum Tarihi</dt>
                <dd class="col-md-8 col-sm-6">@Model.BirthDate?.ToString("dd.MM.yyyy") ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Boy / Kilo</dt>
                <dd class="col-md-8 col-sm-6">
                    @(Model.HeightCm.HasValue ? $"{Model.HeightCm.Value} cm" : "-") /
                    @(Model.WeightKg.HasValue ? $"{Model.WeightKg.Value} kg" : "-")
                </dd>

                <dt class="col-md-4 col-sm-6">Vücut Tipi</dt>
                <dd class="col-md-8 col-sm-6">@Model.BodyType</dd>

                <dt class="col-md-4 col-sm-6">Kan Grubu</dt>
                <dd class="col-md-8 col-sm-6">@Model.BloodType</dd>

                <dt class="col-md-4 col-sm-6">Telefon</dt>
                <dd class="col-md-8 col-sm-6">@Model.PhoneNumber ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Adres</dt>
                <dd class="col-md-8 col-sm-6">@Model.Address ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Acil Durum Kişisi</dt>
                <dd class="col-md-8 col-sm-6">
                    @if (!string.IsNullOrWhiteSpace(Model.EmergencyContactName) || !string.IsNullOrWhiteSpace(Model.EmergencyContactPhone))
                    {
                        @(Model.EmergencyContactName + " " + Model.EmergencyContactPhone)
                    }
                    else
                    {
                        @("-")
                    }
                </dd>

                <dt class="col-md-4 col-sm-6">Medikal Geçmiş</dt>
                <dd class="col-md-8 col-sm-6">@Model.MedicalHistory ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Kronik Hastalıklar</dt>
                <dd class="col-md-8 col-sm-6">@Model.ChronicDiseases ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Sürekli İlaçlar</dt>
                <dd class="col-md-8 col-sm-6">@Model.CurrentMedications ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Alerjiler</dt>
                <dd class="col-md-8 col-sm-6">@Model.Allergies ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Geçmiş Yaralanmalar</dt>
                <dd class="col-md-8 col-sm-6">@Model.PastInjuries ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Mevcut Ağrılar</dt>
                <dd class="col-md-8 col-sm-6">@Model.CurrentPain ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Hamilelik Durumu</dt>
                <dd class="col-md-8 col-sm-6">
                    @(Model.PregnancyStatus == true ? "Evet" :
                        Model.PregnancyStatus == false ? "Hayır" : "-")
                </dd>

                <dt class="col-md-4 col-sm-6">Sağlık Kontrolü</dt>
                <dd class="col-md-8 col-sm-6">@Model.LastCheckResults ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Sigara / Alkol</dt>
                <dd class="col-md-8 col-sm-6">@Model.SmokingAlcohol ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Meslek</dt>
                <dd class="col-md-8 col-sm-6">@Model.Occupation ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Deneyim</dt>
                <dd class="col-md-8 col-sm-6">@Model.ExperienceLevel</dd>

                <dt class="col-md-4 col-sm-6">Favori Sporlar</dt>
                <dd class="col-md-8 col-sm-6">@Model.FavoriteSports ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Notlar</dt>
                <dd class="col-md-8 col-sm-6">@Model.Notes ?? "-"</dd>

                <dt class="col-md-4 col-sm-6">Diyet Tipi</dt>
                <dd class="col-md-8 col-sm-6">@Model.DietType</dd>

                <dt class="col-md-4 col-sm-6">Oluşturulma Tarihi</dt>
                <dd class="col-md-8 col-sm-6">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
            </dl>

            <div class="mt-4 text-end">
                <a asp-action="Edit" asp-controller="Profile" class="btn btn-warning px-4">
                    <i class="bi bi-pencil-square me-1"></i> Profili Düzenle
                </a>
            </div>
        </div>
    </div>
</div>
