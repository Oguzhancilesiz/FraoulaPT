@model FraoulaPT.DTOs.UserProfileDTOs.UserProfileUpdateDTO

@{
    ViewData["Title"] = "Profilini Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow-lg border-0 rounded-3 bg-dark text-light">
        <div class="card-header bg-warning text-dark fw-semibold text-center py-3">
            <i class="bi bi-pencil-square me-2"></i> Profilini Düzenle
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                <!-- Profil Fotoğrafı -->
                <div class="mb-4 text-center position-relative d-inline-block">
                    <img id="photoPreview"
                         src="@(!string.IsNullOrWhiteSpace(Model.ProfilePhotoUrl) ? Model.ProfilePhotoUrl : "/uploads/user-default.jpg")"
                         class="rounded-circle shadow-sm border border-3 border-warning"
                         style="width: 140px; height: 140px; object-fit: cover; background:#f5f5f5;" />

                    <label for="profilePhoto"
                           class="position-absolute bottom-0 end-0 bg-warning text-white rounded-circle shadow d-flex align-items-center justify-content-center"
                           style="width: 40px; height: 40px; cursor: pointer; border: 2px solid white;">
                        <i class="bi bi-plus-lg fs-5"></i>
                    </label>

                    <input type="file" name="profilePhoto" id="profilePhoto"
                           class="d-none" accept="image/*" onchange="previewPhoto(event)" />
                </div>

                <!-- Kişisel Bilgiler -->
                <h5 class="fw-bold text-warning mt-3 mb-2">Kişisel Bilgiler</h5>
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <label class="form-label">Instagram</label>
                        <input asp-for="Instagram" class="form-control bg-dark text-light border-secondary" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Cinsiyet</label>
                        <select asp-for="Gender" class="form-select bg-dark text-light border-secondary"
                                asp-items="Html.GetEnumSelectList<FraoulaPT.Core.Enums.Gender>()"></select>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Doğum Tarihi</label>
                        <input asp-for="BirthDate" type="date" class="form-control bg-dark text-light border-secondary"
                               value="@(Model.BirthDate?.ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Boy (cm)</label>
                        <input asp-for="HeightCm" class="form-control bg-dark text-light border-secondary" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Kilo (kg)</label>
                        <input asp-for="WeightKg" class="form-control bg-dark text-light border-secondary" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Vücut Tipi</label>
                        <select asp-for="BodyType" class="form-select bg-dark text-light border-secondary"
                                asp-items="Html.GetEnumSelectList<FraoulaPT.Core.Enums.BodyType>()"></select>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Kan Grubu</label>
                        <select asp-for="BloodType" class="form-select bg-dark text-light border-secondary"
                                asp-items="Html.GetEnumSelectList<FraoulaPT.Core.Enums.BloodType>()"></select>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Telefon</label>
                        <input asp-for="PhoneNumber" class="form-control bg-dark text-light border-secondary" />
                    </div>
                    <div class="col-12">
                        <label class="form-label">Adres</label>
                        <input asp-for="Address" class="form-control bg-dark text-light border-secondary" />
                    </div>
                </div>

                <hr class="border-secondary" />

                <!-- Sağlık ve Acil Durum Bilgileri -->
                <h5 class="fw-bold text-warning mb-2">Sağlık ve Acil Durum Bilgileri</h5>
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <label class="form-label">Acil Durum Kişisi</label>
                        <input asp-for="EmergencyContactName" class="form-control bg-dark text-light border-secondary" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Acil Durum Telefonu</label>
                        <input asp-for="EmergencyContactPhone" class="form-control bg-dark text-light border-secondary" />
                    </div>
                    <div class="col-12">
                        <label class="form-label">Medikal Geçmiş</label>
                        <textarea asp-for="MedicalHistory" class="form-control bg-dark text-light border-secondary" rows="2"></textarea>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Kronik Hastalıklar</label>
                        <input asp-for="ChronicDiseases" class="form-control bg-dark text-light border-secondary" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Kullandığı İlaçlar</label>
                        <input asp-for="CurrentMedications" class="form-control bg-dark text-light border-secondary" />
                    </div>

                    <!-- EKLENEN ZORUNLU ALANLAR -->
                    <div class="col-12 col-md-6">
                        <label class="form-label">Alerjiler</label>
                        <input asp-for="Allergies" class="form-control bg-dark text-light border-secondary" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Geçmiş Yaralanmalar</label>
                        <input asp-for="PastInjuries" class="form-control bg-dark text-light border-secondary" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Mevcut Ağrı</label>
                        <input asp-for="CurrentPain" class="form-control bg-dark text-light border-secondary" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Son Sağlık Kontrolü</label>
                        <input asp-for="LastCheckResults" class="form-control bg-dark text-light border-secondary" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Sigara / Alkol</label>
                        <input asp-for="SmokingAlcohol" class="form-control bg-dark text-light border-secondary" />
                    </div>
                </div>

                <hr class="border-secondary" />

                <!-- Diğer Bilgiler -->
                <h5 class="fw-bold text-warning mb-2">Diğer Bilgiler</h5>
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <label class="form-label">Meslek</label>
                        <input asp-for="Occupation" class="form-control bg-dark text-light border-secondary" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Deneyim Seviyesi</label>
                        <select asp-for="ExperienceLevel" class="form-select bg-dark text-light border-secondary"
                                asp-items="Html.GetEnumSelectList<FraoulaPT.Core.Enums.ExperienceLevel>()"></select>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Favori Sporlar</label>
                        <input asp-for="FavoriteSports" class="form-control bg-dark text-light border-secondary" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Diyet Tipi</label>
                        <select asp-for="DietType" class="form-select bg-dark text-light border-secondary"
                                asp-items="Html.GetEnumSelectList<FraoulaPT.Core.Enums.DietType>()"></select>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Ek Notlar</label>
                        <textarea asp-for="Notes" class="form-control bg-dark text-light border-secondary" rows="2"></textarea>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-success btn-lg px-4">
                        <i class="bi bi-save me-1"></i> Kaydet
                    </button>
                    <a asp-action="Detail" class="btn btn-outline-light btn-lg ms-2 px-4">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewPhoto(event) {
            const input = event.target;
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('photoPreview').src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
