@using System.Globalization

<div class="modal fade" id="startProgramModal" tabindex="-1" role="dialog" aria-labelledby="startProgramModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Program Başlat</h5>
                <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="startProgramForm">
                    <input type="hidden" name="UserWeeklyFormId" id="UserWeeklyFormId" />

                    <div class="form-group mb-3">
                        <label>Program Başlığı</label>
                        <input type="text" class="form-control" name="ProgramTitle" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Koç Notu</label>
                        <textarea class="form-control" name="CoachNote"></textarea>
                    </div>

                    <div class="form-group mb-2">
                        <label>Program Günleri:</label>
                        @for (int i = 1; i <= 7; i++)
                        {
                            var dayName = CultureInfo.CurrentCulture.DateTimeFormat.GetDayName((DayOfWeek)(i % 7));
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SelectedDays" value="@i" id="day_@i" />
                                <label class="form-check-label" for="day_@i">@dayName</label>
                            </div>
                        }
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="submitProgramBtn">Kaydet</button>
            </div>
        </div>
    </div>
</div>
