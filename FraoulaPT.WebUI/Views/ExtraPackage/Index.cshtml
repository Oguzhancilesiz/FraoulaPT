@using FraoulaPT.DTOs.ExtraPackageOptionDTOs
@model List<ExtraPackageOptionListDTO>
@using FraoulaPT.Core.Enums

@{
    ViewData["Title"] = "Ek Paketler";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var typeNames = (Model ?? new List<ExtraPackageOptionListDTO>())
        .Select(m => m.Type.ToString())
        .Where(s => !string.IsNullOrWhiteSpace(s))
        .Distinct()
        .OrderBy(s => s)
        .ToList();
}

<div class="container py-5">
    <!-- Başlık -->
    <div class="d-flex align-items-center gap-3 mb-4">
        <div class="rounded-3 d-grid place-items-center" style="width:56px;height:56px;background:var(--brand-grad);color:#fff">
            <i class="bi bi-bag-plus-fill fs-4"></i>
        </div>
        <div>
            <h2 class="mb-0">Ek Paketler</h2>
            <div class="text-muted">İhtiyacına göre ek soru/mesaj hakları ekle.</div>
        </div>
        <div class="ms-auto d-none d-md-flex align-items-center gap-2">
            <input id="extraSearch" type="text" class="form-control form-control-sm ring" placeholder="Ara: paket adı..." style="max-width:240px">
            <select id="extraType" class="form-select form-select-sm ring" style="max-width:180px">
                <option value="">Tüm Türler</option>
                @foreach (var t in typeNames)
                {
                    <option value="@t">@t</option>
                }
            </select>
        </div>
    </div>

    <!-- Mobil filtreler -->
    <div class="d-flex d-md-none gap-2 mb-3">
        <input id="extraSearchSm" type="text" class="form-control form-control-sm ring" placeholder="Ara...">
        <select id="extraTypeSm" class="form-select form-select-sm ring">
            <option value="">Tür</option>
            @foreach (var t in typeNames)
            {
                <option value="@t">@t</option>
            }
        </select>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card border-0 shadow-sm" style="background:var(--surface);color:var(--text);border:1px solid var(--border)">
            <div class="card-body text-center py-5">
                <div class="mb-2"><i class="bi bi-box-seam fs-2"></i></div>
                <div class="fw-semibold mb-1">Şu an sunulan ek paket bulunmuyor.</div>
                <div class="text-muted">Daha sonra tekrar kontrol edin.</div>
            </div>
        </div>
    }
    else
    {
        <div id="extraGrid" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
            @foreach (var item in Model)
            {
                var typeText = item.Type.ToString() ?? "-";
                <div class="col ep-card" data-name="@item.Name?.ToLower()" data-type="@typeText">
                    <div class="card h-100 border-0 shadow-lg" style="background:var(--surface);color:var(--text);border:1px solid var(--border)">
                        <div class="card-body d-flex flex-column p-4">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold mb-0">@item.Name</h5>
                                <span class="badge text-bg-dark" style="border:1px solid var(--border)">@typeText</span>
                            </div>

                            <div class="small text-muted mb-1">Adet</div>
                            <div class="fw-semibold mb-2">@item.Amount</div>

                            <div class="small text-muted mb-1">Fiyat</div>
                            <div class="fw-bold mb-3">@($"{item.Price:C2}")</div>

                            <div class="mt-auto">
                                <form method="post" asp-action="PurchaseExtraPackage" asp-controller="ExtraPackage" data-buy>
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="extraPackageOptionId" value="@item.Id" />
                                    <button type="submit" class="btn btn-accent w-100 fw-semibold">
                                        <i class="bi bi-cart-plus me-1"></i> Satın Al
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Arama & filtre (desktop + mobile senkron)
        (function(){
          const grid = document.getElementById('extraGrid');
          const s1 = document.getElementById('extraSearch');
          const s2 = document.getElementById('extraSearchSm');
          const t1 = document.getElementById('extraType');
          const t2 = document.getElementById('extraTypeSm');

          function val(el){ return (el?.value || '').toLowerCase(); }
          function sync(src, dst){ if (dst && dst.value !== src.value) dst.value = src.value; }

          function apply(){
            if(!grid) return;
            const q = (s1?.value || s2?.value || '').toLowerCase();
            const type = (t1?.value || t2?.value || '').toLowerCase();

            grid.querySelectorAll('.ep-card').forEach(card=>{
              const name = (card.getAttribute('data-name')||'');
              const t = (card.getAttribute('data-type')||'').toLowerCase();
              const passName = !q || name.includes(q);
              const passType = !type || t === type;
              card.classList.toggle('d-none', !(passName && passType));
            });
          }

          [s1,s2,t1,t2].forEach(el => el?.addEventListener('input', e=>{
            // sync pairs
            if(e.target === s1) sync(s1, s2); else if(e.target === s2) sync(s2, s1);
            if(e.target === t1) sync(t1, t2); else if(e.target === t2) sync(t2, t1);
            apply();
          }));

          apply();
        })();

        // Satın alırken spinner + disable
        (function(){
          document.querySelectorAll('form[data-buy]').forEach(f=>{
            f.addEventListener('submit', function(){
              const btn = f.querySelector('button[type="submit"]');
              if(!btn) return;
              btn.disabled = true;
              btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span> İşleniyor...';
            });
          });
        })();
    </script>
}
