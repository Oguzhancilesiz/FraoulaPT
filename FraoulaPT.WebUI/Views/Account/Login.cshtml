@model FraoulaPT.DTOs.UserDTOs.LoginDTO

@{
    ViewBag.Title = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Giriş Yap</h2>

@if (TempData["message"] != null)
{
    <div class="alert alert-@TempData["messageType"].ToString().ToLower()">
        @TempData["message"]
    </div>
}

<form asp-action="Login" method="post" autocomplete="off" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" type="email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-control" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
    </div>
    <button type="submit" class="btn btn-success">Giriş Yap</button>
    <a href="@Url.Action("Register", "Account")" class="btn btn-link">Hesabın yok mu? Kayıt ol</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
