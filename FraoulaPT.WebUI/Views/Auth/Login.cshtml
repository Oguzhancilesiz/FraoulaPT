@using FraoulaPT.DTOs.AuthDTOs
@model UserLoginDTO
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0" style="background-color: rgba(20,20,20,0.95); color: #f1f1f1; border-radius: 12px;">
                <div class="card-header text-center fw-semibold"
                     style="background: linear-gradient(90deg, #000, #cc6a00); color: #fff; border-top-left-radius: 12px; border-top-right-radius: 12px;">
                    <i class="bi bi-person-check-fill me-2"></i> Giriş Yap
                </div>
                <div class="card-body p-4">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                        <!-- Kullanıcı Adı / Email -->
                        <div class="mb-3">
                            <label asp-for="UserNameOrEmail" class="form-label fw-semibold">Kullanıcı Adı veya Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark text-light border-secondary">
                                    <i class="bi bi-envelope-at"></i>
                                </span>
                                <input asp-for="UserNameOrEmail" class="form-control bg-dark text-light border-secondary" placeholder="kullanici@eposta.com" />
                            </div>
                            <span asp-validation-for="UserNameOrEmail" class="text-danger small"></span>
                        </div>

                        <!-- Şifre -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">Şifre</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark text-light border-secondary">
                                    <i class="bi bi-lock-fill"></i>
                                </span>
                                <input asp-for="Password" type="password" class="form-control bg-dark text-light border-secondary" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Giriş Butonu -->
                        <div class="d-grid">
                            <button type="submit" class="btn fw-semibold"
                                    style="background-color: #cc6a00; border-color: #cc6a00; color: #fff;"
                                    onmouseover="this.style.backgroundColor='#e6801a'"
                                    onmouseout="this.style.backgroundColor='#cc6a00'">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yap
                            </button>
                        </div>
                    </form>

                    <!-- Alt Linkler -->
                    <div class="mt-4 text-center small">
                        <a asp-action="Register" class="text-decoration-none me-3 text-warning">
                            <i class="bi bi-person-plus"></i> Kayıt Ol
                        </a>
                        <a asp-action="ForgotPassword" class="text-decoration-none text-warning">
                            <i class="bi bi-lock"></i> Şifremi Unuttum
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
