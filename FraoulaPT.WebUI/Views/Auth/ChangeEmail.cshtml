@model FraoulaPT.DTOs.AuthDTOs.ChangeEmailDTO
@{
    ViewData["Title"] = "E-posta Değiştir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5" style="max-width:640px">
    <div class="card border-0 shadow-lg" style="background:var(--surface);color:var(--text);border:1px solid var(--border)">
        <div class="card-body p-4 p-md-5">
            <div class="d-flex align-items-center gap-3 mb-3">
                <div class="rounded-3 d-grid place-items-center" style="width:56px;height:56px;background:var(--brand-grad);color:#fff">
                    <i class="bi bi-envelope-paper-fill fs-4"></i>
                </div>
                <div>
                    <h3 class="mb-1">E-posta Değiştir</h3>
                    <div class="text-muted">Yeni adresine bir onay bağlantısı göndereceğiz.</div>
                </div>
            </div>

            <form asp-action="ChangeEmail" method="post" id="changeEmailForm" novalidate>
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="NewEmail" class="form-label fw-semibold"></label>
                    <input asp-for="NewEmail" class="form-control ring" type="email" autocomplete="email" placeholder="ornek@domain.com" />
                    <span asp-validation-for="NewEmail" class="text-danger small"></span>
                </div>

                <div class="d-flex flex-column flex-sm-row gap-2">
                    <button type="submit" class="btn btn-accent px-4" id="submitBtn">
                        <i class="bi bi-send me-1"></i> Onay Linki Gönder
                    </button>
                    <a asp-controller="Profile" asp-action="Detail" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle me-1"></i> İptal
                    </a>
                </div>
            </form>

            <div class="alert alert-secondary mt-4 mb-0 small" style="background:rgba(255,255,255,.03);border-color:var(--border);color:var(--muted)">
                <i class="bi bi-info-circle me-1"></i>
                Güvenlik için, bağlantıya tıkladıktan sonra oturum bilgileriniz yenilenir.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Basit UX: geçersiz e-posta için butonu pasifleştir + gönderimde spinner
        (function () {
          const form = document.getElementById('changeEmailForm');
          const input = document.getElementById('NewEmail') || document.querySelector('[name="NewEmail"]');
          const btn = document.getElementById('submitBtn');

          function toggle() {
            if (!input) return;
            const ok = input.value && input.checkValidity();
            btn.disabled = !ok;
          }
          input?.addEventListener('input', toggle);
          toggle();

          form?.addEventListener('submit', function () {
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span> Gönderiliyor...';
          });
        })();
    </script>
}
