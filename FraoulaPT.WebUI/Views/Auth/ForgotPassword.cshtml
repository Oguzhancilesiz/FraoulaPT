@using FraoulaPT.DTOs.AuthDTOs
@model UserForgotPasswordDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Şifremi Unuttum";
    var waitSeconds = ViewBag.ResetPasswordWaitSeconds ?? 0;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0" style="background-color: rgba(20,20,20,0.95); color: #f1f1f1; border-radius: 12px;">
                <div class="card-header text-center fw-semibold"
                     style="background: linear-gradient(90deg, #000, #cc6a00); color: #fff; border-top-left-radius: 12px; border-top-right-radius: 12px;">
                    <i class="bi bi-lock-fill me-2"></i> Şifremi Unuttum
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Info != null)
                    {
                        <div class="alert alert-info text-center">@ViewBag.Info</div>
                    }

                    @if (waitSeconds > 0)
                    {
                        <div id="wait-message" class="alert alert-warning text-center" style="background-color: rgba(255,166,0,0.15); color: #ffae42;">
                            <span>
                                📩 Şifre sıfırlama bağlantısı e-posta adresinize gönderildi.<br />Yeni bir istek için
                                <strong><span id="timer">@waitSeconds</span></strong> saniye bekleyiniz.
                            </span>
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">E-Posta Adresi</label>
                            <input asp-for="Email" class="form-control bg-dark text-light border-secondary"
                                   placeholder="ornek@mail.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <button type="submit" id="forgotBtn" class="btn w-100 fw-semibold"
                                style="background-color: #cc6a00; border-color: #cc6a00; color: #fff;"
                                onmouseover="this.style.backgroundColor='#e6801a'"
                                onmouseout="this.style.backgroundColor='#cc6a00'"
                        @(waitSeconds > 0 ? "disabled" : "")>
                            <i class="bi bi-send"></i> Şifre Sıfırlama Bağlantısı Gönder
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @if (waitSeconds > 0)
    {
        <script>
            let seconds = @waitSeconds;
            const btn = document.getElementById("forgotBtn");
            const timerSpan = document.getElementById("timer");
            const interval = setInterval(() => {
                seconds--;
                timerSpan.innerText = seconds;
                if (seconds <= 0) {
                    clearInterval(interval);
                    document.getElementById("wait-message").style.display = "none";
                    btn.disabled = false;
                }
            }, 1000);
        </script>
    }
}
