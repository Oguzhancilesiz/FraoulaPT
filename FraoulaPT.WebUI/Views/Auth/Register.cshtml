@using FraoulaPT.DTOs.AuthDTOs
@model UserRegisterDTO

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0" style="background-color: rgba(20,20,20,0.95); color: #f1f1f1; border-radius: 12px;">
                <div class="card-header text-center fw-semibold"
                     style="background: linear-gradient(90deg, #000, #cc6a00); color: #fff; border-top-left-radius: 12px; border-top-right-radius: 12px;">
                    <i class="bi bi-person-plus-fill me-2"></i> Kayıt Ol
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                        <!-- Ad Soyad -->
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold">Ad Soyad</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark text-light border-secondary">
                                    <i class="bi bi-person-fill"></i>
                                </span>
                                <input asp-for="FullName" class="form-control bg-dark text-light border-secondary" placeholder="Adınız Soyadınız" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <!-- Kullanıcı Adı -->
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label fw-semibold">Kullanıcı Adı</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark text-light border-secondary">
                                    <i class="bi bi-person-badge-fill"></i>
                                </span>
                                <input asp-for="UserName" class="form-control bg-dark text-light border-secondary" placeholder="kullanici123" />
                            </div>
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark text-light border-secondary">
                                    <i class="bi bi-envelope-fill"></i>
                                </span>
                                <input asp-for="Email" class="form-control bg-dark text-light border-secondary" placeholder="mail@ornek.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Şifre -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">Şifre</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark text-light border-secondary">
                                    <i class="bi bi-lock-fill"></i>
                                </span>
                                <input asp-for="Password" type="password" class="form-control bg-dark text-light border-secondary" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Şifre Tekrar -->
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">Şifre Tekrar</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark text-light border-secondary">
                                    <i class="bi bi-lock-fill"></i>
                                </span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control bg-dark text-light border-secondary" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <!-- Kayıt Ol Butonu -->
                        <div class="d-grid">
                            <button type="submit" class="btn fw-semibold"
                                    style="background-color: #cc6a00; border-color: #cc6a00; color: #fff;"
                                    onmouseover="this.style.backgroundColor='#e6801a'"
                                    onmouseout="this.style.backgroundColor='#cc6a00'">
                                <i class="bi bi-person-check-fill me-1"></i> Kayıt Ol
                            </button>
                        </div>
                    </form>

                    <!-- Giriş Linki -->
                    <div class="mt-4 text-center small">
                        Zaten hesabınız var mı?
                        <a asp-action="Login" class="text-warning text-decoration-none ms-1">
                            <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
