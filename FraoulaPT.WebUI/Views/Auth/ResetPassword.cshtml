@using FraoulaPT.DTOs.AuthDTOs
@model UserResetPasswordDTO

@{
    ViewData["Title"] = "Şifre Sıfırla";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark text-center fw-semibold">
                    <i class="bi bi-key-fill me-2"></i> Şifre Sıfırla
                </div>
                <div class="card-body">
                    @if (ViewBag.Info != null)
                    {
                        <div class="alert alert-info">@ViewBag.Info</div>
                    }

                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Token" />

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Yeni Şifre Tekrar</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-orange w-100">
                            <i class="bi bi-arrow-repeat me-1"></i> Şifreyi Sıfırla
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
