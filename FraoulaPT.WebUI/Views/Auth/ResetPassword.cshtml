@using FraoulaPT.DTOs.AuthDTOs
@model UserResetPasswordDTO

@{
    ViewData["Title"] = "Şifre Sıfırla";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0" style="background-color: rgba(20,20,20,0.95); color: #f1f1f1; border-radius: 12px;">
                <div class="card-header text-center fw-semibold"
                     style="background: linear-gradient(90deg, #000, #cc6a00); color: #fff; border-top-left-radius: 12px; border-top-right-radius: 12px;">
                    <i class="bi bi-key-fill me-2"></i> Şifre Sıfırla
                </div>
                <div class="card-body p-4">

                    @if (ViewBag.Info != null)
                    {
                        <div class="alert alert-info">@ViewBag.Info</div>
                    }

                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Token" />

                        <!-- Yeni Şifre -->
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-semibold">Yeni Şifre</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark text-light border-secondary">
                                    <i class="bi bi-lock-fill"></i>
                                </span>
                                <input asp-for="NewPassword" type="password" class="form-control bg-dark text-light border-secondary" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <!-- Yeni Şifre Tekrar -->
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">Yeni Şifre Tekrar</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark text-light border-secondary">
                                    <i class="bi bi-lock-fill"></i>
                                </span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control bg-dark text-light border-secondary" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <!-- Buton -->
                        <div class="d-grid">
                            <button type="submit" class="btn fw-semibold"
                                    style="background-color: #cc6a00; border-color: #cc6a00; color: #fff;"
                                    onmouseover="this.style.backgroundColor='#e6801a'"
                                    onmouseout="this.style.backgroundColor='#cc6a00'">
                                <i class="bi bi-arrow-repeat me-1"></i> Şifreyi Sıfırla
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
