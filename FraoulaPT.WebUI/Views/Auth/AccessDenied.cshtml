@{
    ViewData["Title"] = "Erişim Reddedildi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-center">
        <div class="card access-denied-card text-center shadow-lg border-0">
            <div class="card-body p-4 p-md-5">
                <div class="icon-wrap mb-3">
                    <i class="bi bi-shield-lock-fill"></i>
                </div>

                <h2 class="fw-bold mb-2">Bu sayfaya erişim izniniz yok</h2>
                <p class="text-muted mb-4">
                    Bu alan yalnızca yetkili kullanıcılar içindir. Yanlışlık olduğunu düşünüyorsanız lütfen koçunuzla iletişime geçin.
                </p>

                <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-accent px-4">
                        <i class="bi bi-house-door me-1"></i> Ana Sayfa
                    </a>
                    <button type="button" class="btn btn-outline-secondary px-4" onclick="history.back()">
                        <i class="bi bi-arrow-left-circle me-1"></i> Geri Dön
                    </button>
                    <button type="button" class="btn btn-outline-light px-4" onclick="document.getElementById('supportToggle')?.click()">
                        <i class="bi bi-chat-dots me-1"></i> Destek Al
                    </button>
                </div>

                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="mt-3">
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yap
                        </a>
                        <a asp-controller="Auth" asp-action="Register" class="btn btn-sm btn-outline-secondary ms-2">
                            <i class="bi bi-person-plus me-1"></i> Kayıt Ol
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .access-denied-card {
        max-width: 640px;
        background: var(--surface);
        color: var(--text);
        border: 1px solid var(--border);
    }

        .access-denied-card .icon-wrap {
            width: 84px;
            height: 84px;
            margin: 0 auto;
            display: grid;
            place-items: center;
            border-radius: 24px;
            background: var(--brand-grad);
            color: #fff;
            box-shadow: 0 10px 30px rgba(0,0,0,.25);
        }

            .access-denied-card .icon-wrap i {
                font-size: 2rem;
            }
    @@media (max-width: 576px) {
        .access-denied-card .card-body

    {
        padding: 1.5rem;
    }

    .access-denied-card .icon-wrap {
        width: 72px;
        height: 72px;
    }

    }
</style>
